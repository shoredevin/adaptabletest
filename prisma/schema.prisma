// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TodoItem {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  done   Boolean @default(false)
}


model Pokedex {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  dexnum  Int
  name    String
  type1   String
  type2   String
  caught  Boolean @default(false)
  shiny   Boolean @default(false)
} 

model PokemonDetails {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  dexNum                Int
  name                  String @unique
  nickname              String
  ability1              String
  ability2              String
  hability              String
  eggGroup              String
  catchRate             String
  hatchRate             String
  levelingRate          String
  mPercent              String
  fPercent              String
  spriteURL             String
  spriteURLShiny        String
  femaleSpriteURL       String
  femaleSpriteURLShiny  String
  forms                 Json
}

model Users {
    id                  String @id @default(auto()) @map("_id") @db.ObjectId
    username            String @unique
    password            String
    sessionId           String
}